{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "incremental": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": [
        "@types",
        "node_modules/@types"
      ],
    },
    "exclude": ["node_modules", "dist"],
  }
  