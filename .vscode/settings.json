{
  "[javascript, typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
      "javascript",
      "typescript"
    ]
  },
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "files.exclude": {
    "coverage/": true,
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/dist": true
  }
}